doctype html
html(ng-app='financeApp2')
  head
    title= title
    block scripts
      link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open%20Sans")
      //link(rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
      link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
      meta(name="viewport" content="width=device-width, initial-scale=1")
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
      //script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
      script(src="/javascripts/expenses.js")
      link(rel='stylesheet', href='/stylesheets/style.css')
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js')
      script(src='/core.js')
      script(src='/angularcore.js')
      
      //Material
      link(rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.css")
      script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.min.js')
      script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-aria.min.js')
      script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-messages.min.js')
      script(src='http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.js')      
      
  body(ng-controller='mainController')
    block navbar
      md-toolbar(layout="column")
        .md-toolbar-tools
          span #{displayName}'s Spending
        md-tabs
          md-tab(md-on-select="newSpendingLink()") 
            md-tab-label New Spending
          md-tab(md-on-select="overviewLink()") 
            md-tab-label Overview
       
    block content
