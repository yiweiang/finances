extends layout

block content
  div.container
    h4= title
    table(width="90%" style="text-align:left")
      tr(style="font-weight:600")
        td Description
        td Amount
        td Category
        td Date
        td Actions
      tr(ng-repeat="lineItem in lineItems")
        td {{lineItem.description}}
        td {{lineItem.amount}}
        td {{lineItem.category}}
        td {{lineItem.date | date:"MMMM dd yyyy"}}
        td
          i.deleteLineItem(class="fa fa-trash" ng-click="deleteLineItem(lineItem._id)")
    .spacer
