extends layout

block content
  div.container
    h4= title
    table(width="90%" style="text-align:left")
      tr(style="font-weight:600")
        td Description
        td Amount
        td Category
        td Date
        td Actions
      for d in data
        tr
         
          td #{d.description}
          td $#{d.amount}
          td #{d.category}
          td #{d.date}
          td
            i.deleteLineItem(class="fa fa-trash" id="#{d.id}")
    .spacer
